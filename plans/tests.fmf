provision:
  hardware:
    virtualization:
      is-supported: true

prepare:
  - name: Install dependencies
    how: install
    package:
      - bash
      - cargo
      - coreutils
      - crun
      - crun-krun
      - docker
      - genisoimage
      - grep
      - guestfs-tools
      - libselinux-devel
      - libvirt-client
      - libvirt-daemon-driver-qemu
      - openssh
      - openssh-clients
      - passt
      - podman
      - qemu-img
      - qemu-system-aarch64-core
      - qemu-system-x86-core
      - sed
      - util-linux
      - virtiofsd

execute:
  how: tmt
  script: |
    set -ex
    export PATH=$PATH:/root/.cargo/bin LIBGUESTFS_BACKEND=direct

    # set the test VM's Fedora version to the host's to run the tests under the
    # requested environment
    version=$( awk -F= '/^VERSION_ID=/ {print tolower($2)}' /etc/os-release )
    export CRUN_VM_TEST_ENV_FEDORA_VERSION=$version

    tests/env.sh build
    tests/env.sh start
    tests/env.sh run "$ENGINE" all

/podman:
  summary: Run all tests under Podman
  environment:
    ENGINE: podman

/rootful-podman:
  summary: Run all tests under Rootful Podman
  environment:
    ENGINE: rootful-podman

/docker:
  summary: Run all tests under Docker
  environment:
    ENGINE: docker
